@model assignment01.Areas.ProductManagement.Models.Product

@{
    ViewBag.Title = "Add Product";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Add" method="post">
    <div class="form-group row mb-3">
        <label asp-for="@Model.ProductName" class="col-sm-2 col-form-label">Product Name: </label>
        <div class="col-sm-10">
            <input asp-for="@Model.ProductName" type="text" name="ProductName" id="ProductName" class="form-control">
        </div>
        <span asp-validation-for="@Model.ProductName" style="color: crimson;"></span>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="@Model.ProductDescription" class="col-sm-2 col-form-label">Product Description: </label>
        <div class="col-sm-10">
            <textarea asp-for="@Model.ProductDescription" name="ProductDescription" id="ProductDescription"
                   class="form-control">
            </textarea>
        </div>
        <span asp-validation-for="@Model.ProductDescription" style="color: crimson;"></span>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="@Model.Price" class="col-sm-2 col-form-label">Price: </label>
        <div class="col-sm-10">
            <input asp-for="@Model.Price" type="number" name="Price" id="Price" class="form-control">
        </div>
        <span asp-validation-for="@Model.Price" style="color:crimson;"></span>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="@Model.Quantity" class="col-sm-2 col-form-label">Quantity: </label>
        <div class="col-sm-10">
            <input asp-for="@Model.Quantity" type="number" name="Quantity" id="Quantity" class="form-control">
        </div>
        <span asp-validation-for="@Model.Quantity" style="color:crimson;"></span>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="@Model.LowStockThreshold" class="col-sm-2 col-form-label">LowStockThreshold: </label>
        <div class="col-sm-10">
            <input asp-for="@Model.LowStockThreshold" type="number" name="LowStockThreshold" id="LowStockThreshold"
                   class="form-control">
        </div>
        <span asp-validation-for="@Model.LowStockThreshold" style="color:crimson;"></span>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="@Model.CategoryId" class="col-sm-2 col-form-label">Category: </label>
        <div class="col-sm-10">
            <select asp-for="@Model.CategoryId" id="Category" class="form-select">
                <option value="" selected>Select Category</option>
                @foreach (var category in ViewBag.CategoryList)
                { 
                <option value="@category.CategoryId">@category.CategoryName</option>
                }
            </select>
        </div>
        <span asp-validation-for="@Model.CategoryId" style="color:crimson;"></span>
    </div>


    <div class="form-group row mb-3">
        <div class="col-sm-10">
            <input type="submit" value="Add" class="btn btn-primary">
            <a asp-action="Index" class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>

@* Client side validation *@

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}