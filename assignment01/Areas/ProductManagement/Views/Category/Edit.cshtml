@model assignment01.Areas.ProductManagement.Models.Category

@{
    ViewBag.Title = "Edit Category";
    Layout = "_Layout";
}

<h2 class="mb-4">@ViewBag.Title</h2>

<div class="card shadow-sm p-4">
    <form asp-area="ProductManagement" asp-action="Edit" method="post">
        @Html.HiddenFor(model => model.CategoryId)
        <div class="form-group row mb-3">
            <label asp-for="@Model.CategoryName" class="col-sm-2 col-form-label fw-bold">Category Name: </label>
            <div class="col-sm-10">
                <input asp-for="@Model.CategoryName" type="text" name="CategoryName" id="CategoryName"
                       class="form-control">
            </div>
            <span asp-validation-for="@Model.CategoryName" class="text-error small"></span>
        </div>
        <div class="form-group row mb-3">
            <label asp-for="@Model.CategoryDescription" class="col-sm-2 col-form-label fw-bold">Product Description: </label>
            <div class="col-sm-10">
                <input asp-for="@Model.CategoryDescription" type="text" name="CategoryDescription" id="CategoryDescription"
                       class="form-control">
            </div>
            <span asp-validation-for="@Model.CategoryDescription" class="text-error small"></span>
        </div>

        <div class="d-flex justify-content-start gap-2">
            <input type="submit" value="Save" class="btn btn-primary">
            <a asp-action="Index" class="btn btn-danger">Cancel</a>
        </div>
    </form>
</div>
@* Client side validation *@

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}