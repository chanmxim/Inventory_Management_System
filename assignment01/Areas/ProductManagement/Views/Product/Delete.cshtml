@model assignment01.Areas.ProductManagement.Models.Product

@{
    ViewBag.Title = "Delete Confirmation";
    Layout = "_Layout";
}

<div class="card">
    <h2 class="card-header">Confirm Product Deletion</h2>
    <div class="card-body">
        <h3 class="card-title">Are you sure you want to delete the following product?</h3>
        <p class="card-text product_details_description">Product Details</p>

        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductName)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductDescription)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductDescription)
            </dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            @Html.HiddenFor(model => model.ProductId)
            <input type="submit" value="Delete" class="btn btn-danger">
            <a asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-secondary">Go Back</a>
        </form>
    </div>
</div>