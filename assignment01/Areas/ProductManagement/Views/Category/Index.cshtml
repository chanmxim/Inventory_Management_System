@model List<assignment01.Areas.ProductManagement.Models.Category>

@{
    ViewBag.Title = "Categories";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>
<a asp-action="Add" class="btn btn-primary my-3">Add Category</a>

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
        <th>Category Id</th>
        <th>Category Name</th>
        <th>Category Description</th>
        <th>Action</th>
        </thead>
        <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>@category.CategoryDescription</td>
                <td><a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-primary">Edit</a></td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No categories available</p>
}