@model ICollection<assignment01.Areas.OrderManagement.Models.Order>

@{
    ViewBag.Title = "Order List";
    Layout = "_Layout";
    int counter = 1;
    double grandTotal = 0;
}

<h2>@ViewBag.Title</h2>


@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">No.</th>
            <th scope="col">OrderId</th>
            <th scope="col">Email</th>
            <th scope="col">Delivery Address</th>
            <th scope="col">Creation Date</th>
            <th scope="col">Total</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <th scope="row" class="col-1">@counter</th>
                <td class="col-1">@order.OrderId</td>
                <td class="col-1">@order.User.Email</td>
                <td class="col-2">@order.DeliveryAddress</td>
                <td class="col-2">@Html.DisplayFor(o => order.CreationDate, "DateTime")</td>
                <td class="col-1">$@order.CalculateGrandTotal()</td>
                <td class="col-1">
                    <a asp-controller="Order" asp-action="Details" asp-route-orderId="@order.OrderId" class="btn btn-info" role="button">Details</a>
                </td>
            </tr>
            counter++;
        }
        </tbody>
    </table>
   
}
else
{
    <p>No orders to display</p>
    @* <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Product list</a> *@
}


