@model assignment01.Areas.ProductManagement.Models.Product

@{
    ViewBag.Title = "Edit Product";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    @Html.HiddenFor(model => model.ProductId)
    @Html.HiddenFor(model => model.CategoryId)
    <div class="form-group row mb-3">
        <label asp-for="ProductName" class="col-sm-2 col-form-label">Product Name: </label>
        <div class="col-sm-10">
            <input asp-for="ProductName" type="text" name="ProductName" id="ProductName" class="form-control">
        </div>
        <span asp-validation-for="ProductName" class="text-error"></span>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="ProductDescription" class="col-sm-2 col-form-label">Product Description: </label>
        <div class="col-sm-10">
            <textarea asp-for="ProductDescription" type="text" name="ProductDescription" id="ProductDescription"
                class="form-control"></textarea>
        </div>
        <span asp-validation-for="ProductDescription" class="text-error"></span>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="Price" class="col-sm-2 col-form-label">Price: </label>
        <div class="col-sm-10">
            <input asp-for="Price" type="number" name="Price" id="Price" class="form-control">
        </div>
        <span asp-validation-for="Price" class="text-error"></span>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="Quantity" class="col-sm-2 col-form-label">Quantity: </label>
        <div class="col-sm-10">
            <input asp-for="Quantity" type="number" name="Quantity" id="Quantity" class="form-control">
        </div>
        <span asp-validation-for="Quantity" class="text-error"></span>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="LowStockThreshold" class="col-sm-2 col-form-label">LowStockThreshold: </label>
        <div class="col-sm-10">
            <input asp-for="LowStockThreshold" type="text" name="LowStockThreshold" id="LowStockThreshold" 
                   class="form-control">
        </div>
        <span asp-validation-for="LowStockThreshold" class="text-error"></span>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="Category" class="col-sm-2 col-form-label">Category: </label>
        <div class="col-sm-10">
            <select asp-for="Category" id="Category" class="form-select">
                @foreach (var category in ViewBag.CategoryList)
                {
                if (category.CategoryId == @Model.CategoryId)
                {
                <option value="@category.CategoryId" selected>@category.CategoryName</option>
                }
                else
                {
                <option value="@category.CategoryId">@category.CategoryName</option>
                }
                }
            </select>
        </div>
        <span asp-validation-for="Category" class="text-error"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary">
        <a asp-action="Index" class="btn btn-danger">Cancel</a>
    </div>
</form>

@* Client side validation *@

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}